<h1>Update Figure: </h1>
<form action='/figures/<%=@figure.id%>' method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="name">Name: </label>
  <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"></input><br>

  <label>Titles: </label>
  <br>
  <% Title.all.each do |title| %>
      <%= title.name %><input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title)%>></input><br>
  <% end %>
  <br>

  <label>Landmarks:</label>
  <br>

  <%Landmark.all.each do |landmark|%>
    <%= landmark.name %><input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id%>" <%= 'checked' if @figure.landmarks.include?(landmark)%>></input>
    <br>
  <%end%>

  <label>Add a Landmark: </label>
  <input id="new_landmark" type="text" name="[landmark][name]"></input>

  <input type="submit" value="Edit Figure">
</form>

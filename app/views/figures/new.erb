<h1>Add a new Figure</h1>

<form action="/figures" method="post">
  <label>Titles: </label><br>
  <% Title.all.each do |title|%>
    <label><%= title.name %></label>
    <input type="checkbox" id="title_<%= title.id%>" name="figure[title_ids][]" value="<%= title.id %>" > <br>
  <% end %>
  <br>
  <input type="text" id="new_title" name="title[name]"></input><br>

  <label>Name: </label>
  <br>
  <input type="text" id="figure_name" name="figure[name]"></input><br>
  <br>

  <label>Landmarks: </label><br>
  <% Landmark.all.each do |landmark|%>
  <label><%= landmark.name %></label>
  <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" > <br>
  <% end %>
  <br>
  <input type="text" id="new_landmark" name="landmark[name]"></input><br>


  <button type="submit" value="Create New Figure"></button>
</form>
